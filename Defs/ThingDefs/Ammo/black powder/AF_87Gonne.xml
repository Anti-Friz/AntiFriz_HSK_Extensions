			<armorPenetrationBlunt>75</armorPenetrationBlunt>
		</projectile>
	</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base87GonneBullet">
		<defName>Bullet_87Gonne_Buck</defName>
		<label>.87 Gonne Buck and Ball</label>
