  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_CollierFlintlockRevolverRifle</defName>
    <label>Build Collier Flintlock Revolver Rifle</label>
    <description>Collier Flintlock Revolver Rifle. .\nCaliber: .50</description>
    <jobString>Building Collier Flintlock Revolver Rifle.</jobString>
    <workAmount>16000</workAmount>
    <skillRequirements>
      <Crafting>15</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SmallFlintBlocks</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>65</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_CollierFlintlockRevolverRifle>1</AF_CollierFlintlockRevolverRifle>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>SmallFlintBlocks</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_AdvancedMusktes</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
