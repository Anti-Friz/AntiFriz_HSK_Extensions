<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="SK_ResourceBase">
    <defName>AF_SimpleFirearmPart</defName>
    <label>simple firearm component</label>
    <description>Basic mechanical components for early firearms - springs, screws, pins, and simple trigger mechanisms. These rudimentary parts form the foundation of matchlock and wheellock firing systems, though they require skilled assembly to create a functional weapon.</description>
    <graphicData>
      <texPath>Things/Resource/AF_SimpleWeaponParts</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>150</stackLimit>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>6</MarketValue>
      <DeteriorationRate>0</DeteriorationRate>
      <Flammability>0.2</Flammability>
      <SellPriceFactor>0.50</SellPriceFactor>
      <Mass>1.5</Mass>
      <Bulk>1.5</Bulk>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <thingCategories>
      <li>Parts</li>
    </thingCategories>
  </ThingDef>
  <RecipeDef>
    <defName>MakeAF_SimpleFirearmPart</defName>
    <label>make simple firearm component x1</label>
    <description>Craft basic mechanical components needed for early firearms. Requires medieval components and metal working. Produces 1 component.</description>
    <jobString>Making simple firearm component.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1500</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentMedieval</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentMedieval</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <AF_SimpleFirearmPart>1</AF_SimpleFirearmPart>
  </products>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_RepeatingMechanisms</researchPrerequisite>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>
