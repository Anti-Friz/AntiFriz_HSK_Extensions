    <jobString>Building Highland Pistol pistol.</jobString>
    <workAmount>8000</workAmount>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SmallFlintBlocks</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>45</count>
      </li>
    </ingredients>
    <products>
      <AF_HighlandPistol>1</AF_HighlandPistol>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>SmallFlintBlocks</li>
      </thingDefs>
