<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo577CaliberCap</defName>
    <label>.577 caliber Ball w/Cap</label>
    <parent>AmmoMusket</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_577CaliberCap</defName>
    <label>.577 caliber Ball w/cap</label>
    <ammoTypes>
      <Ammo_577CaliberCap_Lead>Bullet_MinieBall</Ammo_577CaliberCap_Lead>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_577CaliberCapMet</defName>
    <label>.577 Caplock (metalic cartridge)</label>
    <ammoTypes>
      <Ammo_577CaliberCapMetal_Lead>Bullet_577CaliberCapMet</Ammo_577CaliberCapMetal_Lead>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Name="AF_BaseBlackPowderBulletMinieBallBase" ParentName="MinieBallBase" Abstract="true">
    <comps>
      <li Class="CombatExtended.CompProperties_ProjectileFleck">
        <FleckDatas>
          <li>
            <startDelayTick>0</startDelayTick>
            <fleck>Fleck_CEBlackpowderSmokeShort</fleck>
            <emissionsPerTick>4</emissionsPerTick>
            <flecksPerEmission>1</flecksPerEmission>
            <cutoffTickRange>3~3</cutoffTickRange>
            <scale>2.0~2.5</scale>
          </li>
        </FleckDatas>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AF_BaseBlackPowderBulletMinieBallBase">
    <defName>Ammo_577CaliberCap_Lead</defName>
    <description>Round bullet with powder, wrapped in paper and Percussion Cap.</description>
    <label>.577 caliber Ball w/Cap</label>
    <thingCategories>
      <li>Ammo577CaliberCap</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Ammo/Medieval/Blunderbuss/Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.6</MarketValue>
    </statBases>
    <ammoClass>LeadBall</ammoClass>
    <cookOffProjectile>Bullet_MinieBall</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AF_BaseBlackPowderBulletMinieBallBase">
    <defName>Ammo_577CaliberCapMetal_Lead</defName>
    <description>Round bullet with powder in early metallic cartridge with Percussion Cap.</description>
    <label>.577 Caplock (metalic cartridge)</label>
    <thingCategories>
      <li>Ammo577CaliberCap</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.7</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <cookOffProjectile>Bullet_577CaliberCapMet</cookOffProjectile>
  </ThingDef>
  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="MinieBallBase">
    <defName>Bullet_577CaliberCapMet</defName>
    <label>.577 Caplock (metalic cartridge)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>35</damageAmountBase>
      <armorPenetrationSharp>8</armorPenetrationSharp>
      <armorPenetrationBlunt>60</armorPenetrationBlunt>
      <speed>140</speed>
      <dropsCasings>True</dropsCasings>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <!-- BALL FORGE-->
  <RecipeDef ParentName="AmmoRecipeBlackPowderBase">
    <defName>MakeAmmo_577CaliberCap_Lead</defName>
    <label>make .577 caliber Ball x25</label>
    <description>Craft 25 .577 caliber Ball rounds, and measure out powder charge.</description>
    <jobString>Making .577 caliber Ball rounds.</jobString>
    <workAmount>450</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
            <li>USLDBar</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
            <li>SerpentinePowder</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AF_Resource_PercussionCap</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>SerpentinePowder</li>
        <li>AF_Resource_PercussionCap</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_577CaliberCap_Lead>25</Ammo_577CaliberCap_Lead>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_Caplocks</researchPrerequisite>
    <!-- Smithing -->
  </RecipeDef>
  
  <RecipeDef ParentName="AmmoRecipeBlackPowderBase">
    <defName>MakeAmmo_577CaliberCapMetal_Lead</defName>
    <label>make .577 caliber Ball x25</label>
    <description>Craft 25 .577 caliber Ball rounds, and measure out powder charge.</description>
    <jobString>Making .577 caliber Ball rounds.</jobString>
    <workAmount>450</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
            <li>USLDBar</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AF_Resource_PercussionCap</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>AF_Resource_PercussionCap</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_577CaliberCapMetal_Lead>25</Ammo_577CaliberCapMetal_Lead>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_Caplocks</researchPrerequisite>
    <recipeUsers>
      <li>AF_HandloadingAmmoBench</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
