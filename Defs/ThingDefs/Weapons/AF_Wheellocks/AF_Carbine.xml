<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_Carbine</defName>
    <label>Carbine musket, .69 caliber</label>
    <description>musket-like weapon designed for cavalrymen who want more than a pistol. It has a short barrel and weighs much less than a musket or caliver. \nCaliber: .69</description>
    <graphicData>
      <texPath>Things/Weapons/AFCarbine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>300</MarketValue>
      <SightsEfficiency>0.97</SightsEfficiency>
      <ShotSpread>0.35</ShotSpread>
      <SwayFactor>1.4</SwayFactor>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <Bulk>7</Bulk>
      <Mass>6.6</Mass>
      <WorkToMake>8000</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_69Musket_Lead</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>80</range>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>6</reloadTime>
        <ammoSet>AmmoSet_69Musket</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.4,1.4</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <ComponentMedieval>3</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_Carbine</defName>
    <label>Build Carbine musket</label>
    <description>Carbine musket. .\nCaliber: .69</description>
    <jobString>Building Carbine musket.</jobString>
    <workAmount>8000</workAmount>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MagnetiteCrystal</li>
            <li>CassiteriteCrystal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>18</count>
      </li>
    </ingredients>
    <products>
      <AF_Carbine>1</AF_Carbine>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>MagnetiteCrystal</li>
        <li>CassiteriteCrystal</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Wheellocks</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>