  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_FowlingPiece</defName>
    <label>Build FowlingPiece</label>
    <description>Builds a miniature cannon, cast in bronze, mounted on the end of a wooden pole. .\nCaliber: 12G FowlingPiece</description>
    <jobString>Building FowlingPiece.</jobString>
    <workAmount>6000</workAmount>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentMedieval</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SmallFlintBlocks</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>16</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <products>
      <AF_FowlingPieceSingle>1</AF_FowlingPieceSingle>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentMedieval</li>
        <li>SmallFlintBlocks</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>Muskets_B1</researchPrerequisite>
  </RecipeDef>
