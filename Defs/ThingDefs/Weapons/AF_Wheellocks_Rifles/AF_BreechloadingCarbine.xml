<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_BreechloadingCarbine</defName>
    <label>Breechloading Carbine, .54 caliber</label>
    <description>The rifled barrel is short but the construction is substantial. \nCaliber: .54</description>
    <graphicData>
      <texPath>Things/Weapons/AFBreechloadingCarbine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>270</MarketValue>
      <SightsEfficiency>0.8</SightsEfficiency>
      <ShotSpread>0.04</ShotSpread>
      <SwayFactor>1.4</SwayFactor>
      <RangedWeapon_Cooldown>0.89</RangedWeapon_Cooldown>
      <Bulk>9.75</Bulk>
      <Mass>4.21</Mass>
      <WorkToMake>8000</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_54Caliber_Lead</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>13</range>
        <recoilAmount>1.38</recoilAmount>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>2.5</reloadTime>
        <ammoSet>AmmoSet_54Caliber</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.4,1.4</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <ComponentMedieval>3</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_BreechloadingCarbine</defName>
    <label>Build Breechloading Carbine</label>
    <description>Breechloading Carbine. .\nCaliber: .54</description>
    <jobString>Building Gonne.</jobString>
    <workAmount>10000</workAmount>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MagnetiteCrystal</li>
            <li>CassiteriteCrystal</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_BreechloadingCarbine>1</AF_BreechloadingCarbine>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>MagnetiteCrystal</li>
        <li>CassiteriteCrystal</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Wheellocks_Rifles</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
