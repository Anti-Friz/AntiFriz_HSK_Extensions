<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo442CaliberCap</defName>
    <label>.442 caliber Ball w/Cap</label>
    <parent>AmmoMusket</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_442CaliberCapMet</defName>
    <label>.442 Caplock (metalic cartridge)</label>
    <ammoTypes>
      <Ammo_442CaliberCapMetal_Lead>Bullet_442CaliberCapMet</Ammo_442CaliberCapMetal_Lead>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Name="AF_BaseBlackPowderBulletMinieBallBase" ParentName="MinieBallBase" Abstract="true">
    <comps>
      <li Class="CombatExtended.CompProperties_ProjectileFleck">
        <FleckDatas>
          <li>
            <startDelayTick>0</startDelayTick>
            <fleck>Fleck_CEBlackpowderSmokeShort</fleck>
            <emissionsPerTick>4</emissionsPerTick>
            <flecksPerEmission>1</flecksPerEmission>
            <cutoffTickRange>3~3</cutoffTickRange>
            <scale>2.0~2.5</scale>
          </li>
        </FleckDatas>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AF_BaseBlackPowderBulletMinieBallBase">
    <defName>Ammo_442CaliberCap_Lead</defName>
    <description>Round bullet with powder, wrapped in paper and Percussion Cap.</description>
    <label>.442 caliber Ball w/Cap</label>
    <thingCategories>
      <li>Ammo442CaliberCap</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Ammo/Medieval/Blunderbuss/Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.6</MarketValue>
    </statBases>
    <ammoClass>LeadBall</ammoClass>
    <cookOffProjectile>Bullet_MinieBall</cookOffProjectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AF_BaseBlackPowderBulletMinieBallBase">
    <defName>Ammo_442CaliberCapMetal_Lead</defName>
    <description>Round bullet with powder in early metallic cartridge with Percussion Cap.</description>
    <label>.442 Caplock (metalic cartridge)</label>
    <thingCategories>
      <li>Ammo442CaliberCap</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.7</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <cookOffProjectile>Bullet_442CaliberCapMet</cookOffProjectile>
  </ThingDef>
  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="MinieBallBase">
    <defName>Bullet_442CaliberCapMet</defName>
    <label>.442 Caplock (metalic cartridge)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>35</damageAmountBase>
      <armorPenetrationSharp>8</armorPenetrationSharp>
      <armorPenetrationBlunt>60</armorPenetrationBlunt>
      <speed>140</speed>
      <dropsCasings>True</dropsCasings>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipeBlackPowderBase">
    <defName>MakeAmmo_442CaliberCapMetal_Lead</defName>
    <label>make .442 caliber Ball x25</label>
    <description>Craft 25 .442 caliber Ball rounds, and measure out powder charge.</description>
    <jobString>Making .442 caliber Ball rounds.</jobString>
    <workAmount>450</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
            <li>USLDBar</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AF_Resource_PercussionCap</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>AF_Resource_PercussionCap</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_442CaliberCapMetal_Lead>25</Ammo_442CaliberCapMetal_Lead>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_RepeatingMechanisms</researchPrerequisite>
    <recipeUsers>
      <li>AF_HandloadingAmmoBench</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
