<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseGun_ShortBarreled">
    <defName>AF_WheellockMilitaryPistol</defName>
    <label>wheellock military pistol</label>
    <description>A robust wheellock pistol designed for cavalry use. Built to withstand the rigors of mounted combat, these large-bore pistols were typically carried in pairs by horsemen. The reliable wheellock mechanism makes them superior to matchlocks for cavalry, as there's no burning match to extinguish while riding. \nCaliber: .55</description>
    <graphicData>
      <texPath>Things/Weapons/AFMilitaryPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>BPInteract</soundInteract>
    <statBases>
      <MarketValue>250</MarketValue>
      <SightsEfficiency>0.4</SightsEfficiency>
      <ShotSpread>0.57</ShotSpread>
      <SwayFactor>1.25</SwayFactor>
      <RangedWeapon_Cooldown>0.88</RangedWeapon_Cooldown>
      <Bulk>3.8</Bulk>
      <Mass>1.24</Mass>
      <WorkToMake>5500</WorkToMake>
      <MaxHitPoints>40</MaxHitPoints>
      <SellPriceFactor>0.6</SellPriceFactor>
    </statBases>
    <weaponTags>
      <li>BlackPowderGun</li>
    </weaponTags>
    <thingCategories>
      <li>Pistols</li>
    </thingCategories>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_55Caliber_Lead</defaultProjectile>
        <warmupTime>0.68</warmupTime>
        <range>14</range>
        <recoilAmount>4.37</recoilAmount>
        <soundCast>Pistolet</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>Snapshot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>2</reloadTime>
        <ammoSet>AmmoSet_55Caliber</ammoSet>
      </li>
    </comps>
    <smeltProducts Inherit="false">
      <ComponentMedieval>3</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  <!-- RECIPE -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_WheellockMilitaryPistol</defName>
    <label>build wheellock military pistol</label>
    <description>Craft a robust wheellock pistol designed for cavalry combat. The wheellock mechanism provides reliable ignition in mounted warfare. \nCaliber: .55</description>
    <jobString>Building wheellock military pistol.</jobString>
    <workAmount>3500</workAmount>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
            <li>Tin</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <AF_WheellockMilitaryPistol>1</AF_WheellockMilitaryPistol>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>Steel</li>
        <li>Tin</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Research_Wheellocks</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>
