<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_Caliver</defName>
    <label>Caliver Musket, .59 caliber</label>
    <description>lighter, handier musket, designed for use by ordinary soldiers without the strength to serve as musketeers. \nCaliber: .59</description>
    <graphicData>
      <texPath>Things/Weapons/AFCaliver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>300</MarketValue>
      <SightsEfficiency>0.97</SightsEfficiency>
      <ShotSpread>0.35</ShotSpread>
      <SwayFactor>1.4</SwayFactor>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <Bulk>7</Bulk>
      <Mass>6.6</Mass>
      <WorkToMake>8000</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_59Caliber_Lead</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>85</range>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>6</reloadTime>
        <ammoSet>AmmoSet_59Caliber</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.4,1.4</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <Weapon_Parts>1</Weapon_Parts>
    </smeltProducts>
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_Caliver</defName>
    <label>Build Caliver Musket</label>
    <description>Caliver Musket. .\nCaliber: .59</description>
    <jobString>Building Caliver Musket.</jobString>
    <workAmount>8000</workAmount>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RushlightFuel</li>
            <li>CandleFuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>18</count>
      </li>
    </ingredients>
    <products>
      <AF_Caliver>1</AF_Caliver>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
        <li>RushlightFuel</li>
        <li>CandleFuel</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Matchlocks</researchPrerequisite>
  </RecipeDef>
</Defs>