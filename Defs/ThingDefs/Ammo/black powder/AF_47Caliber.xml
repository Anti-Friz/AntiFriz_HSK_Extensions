<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo47Caliber</defName>
    <label>.47 caliber Ball</label>
    <parent>AmmoMusket</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_47Caliber</defName>
    <label>.47 caliber Ball</label>
    <ammoTypes>
      <Ammo_47Caliber_Lead>Bullet_47Caliber_Lead</Ammo_47Caliber_Lead>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="47CaliberBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Round bullet with powder, wrapped in paper.</description>
    <statBases>
      <Mass>0.011</Mass>
      <Bulk>0.03</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo47Caliber</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>0.45</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <explosiveExpandPerStackcount>0.01</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>5</min>
          <max>10</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="47CaliberBase">
    <defName>Ammo_47Caliber_Lead</defName>
    <label>.47 caliber Ball</label>
    <graphicData>
      <texPath>Things/Ammo/Medieval/Blunderbuss/Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>LeadBall</ammoClass>
    <cookOffProjectile>Bullet_47Caliber_Lead</cookOffProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="Base47CaliberBullet" ParentName="AF_BaseBlackPowderBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>110</speed>
      <dropsCasings>False</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Base47CaliberBullet">
    <defName>Bullet_47Caliber_Lead</defName>
    <label>.47 caliber Ball (Lead)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>8</damageAmountBase>
      <!-- <armorPenetrationBase>0.53</armorPenetrationBase> -->
      <armorPenetrationSharp>5</armorPenetrationSharp>
      <armorPenetrationBlunt>45</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <!-- BALL FORGE-->
  <RecipeDef ParentName="AmmoRecipeBlackPowderBase">
    <defName>MakeAmmo_47Caliber_Lead</defName>
    <label>make .47 caliber Ball x25</label>
    <description>Craft 25 .47 caliber Ball rounds, and measure out powder charge.</description>
    <jobString>Making .47 caliber Ball rounds.</jobString>
    <workAmount>450</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>LeadBar</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
            <li>SerpentinePowder</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>SerpentinePowder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_47Caliber_Lead>25</Ammo_47Caliber_Lead>
    </products>
    <skillRequirements>
      <Crafting>1</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_Matchlocks</researchPrerequisite>
    <recipeUsers>
      <li>AF_HandloadingAmmoBench</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
