<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_Weapon_Arquebus</defName>
    <label>arquebus (.60 caliber)</label>
    <description>A heavy matchlock firearm, the predecessor to the musket. This early gunpowder weapon requires a burning slow match to ignite the charge. While cumbersome and slow to reload, it packs a devastating punch that can penetrate most armor of its era. The weight requires a forked rest for accurate shooting. \nCaliber: .60</description>
    <graphicData>
      <texPath>Things/Weapons/AFArquebus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>150</MarketValue>
      <SightsEfficiency>0.53</SightsEfficiency>
      <ShotSpread>0.45</ShotSpread>
      <SwayFactor>1.11</SwayFactor>
      <RangedWeapon_Cooldown>0.86</RangedWeapon_Cooldown>
      <Bulk>13</Bulk>
      <Mass>4.5</Mass>
      <WorkToMake>12000</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_60Caliber_Lead</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <recoilAmount>2.26</recoilAmount>
        <range>15</range>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>2.2</reloadTime>
        <ammoSet>AmmoSet_60Caliber</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.4,1.4</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <ComponentMedieval>1</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_Weapon_Arquebus</defName>
    <label>build arquebus</label>
    <description>Craft a heavy matchlock arquebus, one of the earliest effective firearms. Requires a slow-burning match cord for ignition. \nCaliber: .60</description>
    <jobString>Building arquebus.</jobString>
    <workAmount>12000</workAmount>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentMedieval</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RushlightFuel</li>
            <li>CandleFuel</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>65</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_Weapon_Arquebus>1</AF_Weapon_Arquebus>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentMedieval</li>
        <li>RushlightFuel</li>
        <li>CandleFuel</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Research_Matchlocks</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>