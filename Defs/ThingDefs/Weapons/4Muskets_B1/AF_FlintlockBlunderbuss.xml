<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_FlintlockBlunderbuss</defName>
    <label>flintlock blunderbuss (.62 caliber)</label>
    <description>A short-barreled flintlock firearm with a distinctive flared muzzle designed for close-quarters combat. The wide bore and flared muzzle make loading easier and create a fearsome appearance, though the spread effect is largely psychological. Popular among naval crews, coachmen, and guards who need stopping power at short range. \nCaliber: .62</description>
    <graphicData>
      <texPath>Things/Weapons/AFBlunderbuss</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>190</MarketValue>
      <SightsEfficiency>0.8</SightsEfficiency>
      <ShotSpread>0.45</ShotSpread>
      <SwayFactor>1.39</SwayFactor>
      <RangedWeapon_Cooldown>0.88</RangedWeapon_Cooldown>
      <Bulk>8.5</Bulk>
      <Mass>5.4</Mass>
      <WorkToMake>9500</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_62Blunderbuss_Buck</defaultProjectile>
        <recoilAmount>2.35</recoilAmount>
        <warmupTime>0.6</warmupTime>
        <range>12</range>
        <soundCast>BrownBess</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>15</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>1.6</reloadTime>
        <ammoSet>AmmoSet_62Blunderbuss</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.6,1.6</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <ComponentMedieval>1</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_Weapon_FlintlockBlunderbuss</defName>
    <label>build flintlock blunderbuss</label>
    <description>Craft a flintlock blunderbuss with its distinctive flared muzzle. Effective for close-quarters defense and crowd control. \nCaliber: .62 blunderbuss</description>
    <jobString>Building flintlock blunderbuss.</jobString>
    <workAmount>9500</workAmount>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SmallFlintBlocks</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_FlintlockBlunderbuss>1</AF_FlintlockBlunderbuss>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
        <li>SmallFlintBlocks</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>Muskets_B1</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>