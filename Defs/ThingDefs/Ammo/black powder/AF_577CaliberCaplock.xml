    <workAmount>450</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SLDBar</li>
            <li>USLDBar</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AF_PercussionCap</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>AF_PercussionCap</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_577CaliberCap_Lead>25</Ammo_577CaliberCap_Lead>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Caplock</researchPrerequisite>
