<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="SK_ResourceBase">
    <defName>AF_Resource_PercussionCap</defName>
    <label>percussion cap</label>
    <description>A small copper cap containing mercury fulminate primer compound. When struck by a hammer, it creates a spark that ignites the main powder charge in caplock firearms. This revolutionary invention replaced flint-and-steel ignition systems, providing more reliable firing in wet conditions.</description>
    <graphicData>
      <texPath>Things/Resource/AF_PercussionCap</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>150</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MarketValue>6</MarketValue>
      <DeteriorationRate>0</DeteriorationRate>
      <Flammability>0.2</Flammability>
      <SellPriceFactor>0.50</SellPriceFactor>
      <Mass>0.02</Mass>
      <Bulk>0.02</Bulk>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <thingCategories>
      <li>Parts</li>
    </thingCategories>
  </ThingDef>
  <RecipeDef>
    <defName>MakeAF_Resource_PercussionCap</defName>
    <label>make percussion caps x50</label>
    <description>Craft percussion caps using mercury fulminate and copper. These small but crucial components enable reliable ignition in caplock firearms. Produces 50 caps.</description>
    <jobString>Making percussion caps.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1200</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MercuryFulminate</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MercuryFulminate</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <AF_Resource_PercussionCap>50</AF_Resource_PercussionCap>
    </products>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_Caplocks</researchPrerequisite>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>
