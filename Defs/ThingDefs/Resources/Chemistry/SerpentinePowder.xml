<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="SK_ResourceBase">
    <defName>SerpentinePowder</defName>
    <label>Serpentine Powder</label>
    <description>Serpentine Powder</description>
    <graphicData>
      <texPath>Things/Item/Resource/Powder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>150</stackLimit>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>15</MarketValue>
      <MaxHitPoints>5</MaxHitPoints>
      <DeteriorationRate>0.01</DeteriorationRate>
      <Flammability>14</Flammability>
      <Mass>0.03</Mass>
      <Bulk>0.1</Bulk>
    </statBases>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.2</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>5</min>
          <max>10</max>
        </wickTicks>
      </li>
    </comps>
    <thingCategories>
      <li>ExplosivesCat</li>
    </thingCategories>
  </ThingDef>
  <RecipeDef>
    <defName>MakeSerpentinePowder</defName>
    <label>Make Serpentine Powder (x20)</label>
    <description>Early black powder. Produces 20.</description>
    <jobString>Making Serpentine Powder.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>3000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Nitre</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Charcoal</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Sulfur</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Nitre</li>
        <li>Sulfur</li>
        <li>Charcoal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SerpentinePowder>20</SerpentinePowder>
    </products>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>GunPowderTech</researchPrerequisite>
    <recipeUsers>
      <li>TableStonecutterNeolithic</li>
      <li>TableStonecutter</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
