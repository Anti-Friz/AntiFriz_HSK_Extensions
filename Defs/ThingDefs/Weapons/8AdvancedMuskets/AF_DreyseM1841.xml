<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_DreyseM1841</defName>
    <label>Dreyse M1841 needle rifle</label>
    <description>The world's first military breech-loading bolt-action rifle. This revolutionary Prussian design features a needle firing pin that pierces through the paper cartridge to strike the primer at the bullet's base. While revolutionary for its time, the needle mechanism is delicate and gas leakage reduces range compared to muzzle-loaders. A true game-changer in military firearms evolution. \nCaliber: 15.43x54mm</description>
    <graphicData>
      <texPath>Things/Weapons/AF_DreyseM1841</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
      <li>CE_AI_Rifle</li>
    </weaponTags>
    <statBases>
      <MarketValue>300</MarketValue>
      <SightsEfficiency>0.9</SightsEfficiency>
      <ShotSpread>0.03</ShotSpread>
      <SwayFactor>1.93</SwayFactor>
      <RangedWeapon_Cooldown>1.17</RangedWeapon_Cooldown>
      <Bulk>14.3</Bulk>
      <Mass>4.94</Mass>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>50</MaxHitPoints>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AF_Bullet_1543x54Caliber</defaultProjectile>
        <warmupTime>1.1</warmupTime>
        <range>62</range>
        <recoilAmount>1.92</recoilAmount>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>1.2</reloadTime>
        <ammoSet>AF_AmmoSet_1543x54Caliber</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.4,1.4</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <ComponentMedieval>5</ComponentMedieval>
    </smeltProducts>
    
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_DreyseM1841</defName>
    <label>build Dreyse M1841 needle rifle</label>
    <description>Craft the revolutionary Dreyse needle rifle, the world's first military breech-loading bolt-action rifle. Requires advanced gunsmithing skills. \nCaliber: 15.43x54mm</description>
    <jobString>Building Dreyse M1841 needle rifle.</jobString>
    <workAmount>15000</workAmount>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AF_MusketWeaponPart</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>65</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <products>
      <AF_DreyseM1841>1</AF_DreyseM1841>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AF_MusketWeaponPart</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Research_AdvancedFlintlocks</researchPrerequisite>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
  </RecipeDef>
</Defs>