<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_IronFireLance</defName>
    <label>Iron Fire Lance</label>
    <description>Yard-long iron barrel on two-foot wooden pole.</description>
    <graphicData>
      <texPath>Things/Weapons/AFIronFireLance</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>200</MarketValue>
      <SightsEfficiency>0.3</SightsEfficiency>
      <ShotSpread>2</ShotSpread>
      <SwayFactor>1</SwayFactor>
      <RangedWeapon_Cooldown>6</RangedWeapon_Cooldown>
      <Bulk>12</Bulk>
      <Mass>10</Mass>
      <WorkToMake>6000</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_IronFireLance_RocksPowder</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>5</range>
        <soundCast>BrownBess</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>20</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>3</reloadTime>
        <ammoSet>AmmoSet_IronFireLance</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.6,1.6</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <Weapon_Parts>1</Weapon_Parts>
    </smeltProducts>
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_IronFireLance</defName>
    <label>Build Iron FireLance</label>
    <description>Builds a Yard-long iron barrel on two-foot wooden pole.</description>
    <jobString>Building Gonne.</jobString>
    <workAmount>3500</workAmount>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentMedieval</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RushlightFuel</li>
            <li>CandleFuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>32</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_IronFireLance>1</AF_IronFireLance>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentMedieval</li>
        <li>RushlightFuel</li>
        <li>CandleFuel</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>PreMuskets_B1</researchPrerequisite>
  </RecipeDef>
</Defs>