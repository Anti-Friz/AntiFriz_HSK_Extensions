<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================THING============================ -->
  <ThingDef ParentName="BaseGun_LongBarreled">
    <defName>AF_Musket</defName>
    <label>Musket, .80 caliber</label>
    <description>A large smoothbore musket with a very long barrel. \nCaliber: .80</description>
    <graphicData>
      <texPath>Things/Weapons/AF_Musket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <thingCategories>
      <li>BlackPowderGun</li>
    </thingCategories>
    <weaponTags>
      <li>Rifles</li>
    </weaponTags>
    <statBases>
      <MarketValue>175</MarketValue>
      <SightsEfficiency>0.6</SightsEfficiency>
      <ShotSpread>0.4</ShotSpread>
      <SwayFactor>1.6</SwayFactor>
      <RangedWeapon_Cooldown>0.86</RangedWeapon_Cooldown>
      <Bulk>13</Bulk>
      <Mass>2.99</Mass>
      <WorkToMake>11500</WorkToMake>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_80Caliber_Lead</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>22</range>
        <recoilAmount>1.13</recoilAmount>
        <soundCast>Springfield</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>6</reloadTime>
        <ammoSet>AmmoSet_80Caliber</ammoSet>
      </li>
    </comps>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.6,1.6</DrawSize>
      </li>
    </modExtensions>
    <smeltProducts>
      <Weapon_Parts>1</Weapon_Parts>
    </smeltProducts>
  </ThingDef>
  <!-- ====================RECIPE========================== -->
  <RecipeDef ParentName="RangedWeaponRecipeBase">
    <defName>BuildAF_Musket</defName>
    <label>Build Musket</label>
    <description>Musket. .\nCaliber: .80</description>
    <jobString>Building Musket.</jobString>
    <workAmount>11500</workAmount>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RushlightFuel</li>
            <li>CandleFuel</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>60</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Woody</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <AF_Musket>1</AF_Musket>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
        <li>RushlightFuel</li>
        <li>CandleFuel</li>
      </thingDefs>
      <categories>
        <li>SLDBar</li>
        <li>Woody</li>
      </categories>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>MusketBench</li>
    </recipeUsers>
    <researchPrerequisite>AF_Matchlocks</researchPrerequisite>
  </RecipeDef>
</Defs>