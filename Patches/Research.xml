<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Core SK</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ResearchProjectDef[defName="LongBlades"]/researchViewX</xpath>
          <!-- replace prerequisite of Muskets_B1 -->
          <value>
            <prerequisites>
              <li>PreMuskets_B1</li>
            </prerequisites>
          </value>
        </li>
        
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <ResearchProjectDef ParentName="MedievalBase">
              <defName>PreMuskets_B1</defName>
              <label>MedievalFirearm_B1</label>
              <description>Learn to make a very early firearms, like gonne or firelance.</description>
              <baseCost>480</baseCost>
              <techLevel>Medieval</techLevel>
              <prerequisites>
                <li>GunPowderTech</li>
              </prerequisites>
              <researchViewX>4.00</researchViewX>
              <researchViewY>34.00</researchViewY>
              <tab>Weapon_SK</tab>
              <modExtensions>
                <li Class="ResearchTreeSK.ResearchTreeSKModExtension"></li>
              </modExtensions>
            </ResearchProjectDef>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>