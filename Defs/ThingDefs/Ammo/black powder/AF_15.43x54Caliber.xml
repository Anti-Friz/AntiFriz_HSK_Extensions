<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingCategoryDef>
    <defName>AF_Ammo_1543x54Caliber</defName>
    <label>15.43x54mm paper cartridge</label>
    <parent>AmmoMusket</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
  </ThingCategoryDef>
  <!-- ==================== AmmoSet ========================== -->
  <CombatExtended.AmmoSetDef>
    <defName>AF_AmmoSet_1543x54Caliber</defName>
    <label>15.43x54mm paper cartridge</label>
    <ammoTypes>
      <AF_Ammo_1543x54Caliber>AF_Bullet_1543x54Caliber</AF_Ammo_1543x54Caliber>
      <Ammo_MinieBall>Bullet_MinieBall</Ammo_MinieBall>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
  <!-- ==================== Ammo ========================== -->
  <ThingDef Class="CombatExtended.AmmoDef" Name="AF_1543x54Caliber" ParentName="SmallAmmoBase" Abstract="True">
    <description>Round bullet with powder, wrapped in paper.</description>
    <statBases>
      <Mass>0.03</Mass>
      <Bulk>0.03</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AF_Ammo_1543x54Caliber</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>0.45</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <explosiveExpandPerStackcount>0.01</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.503</startWickHitPointsPercent>
        <wickTicks>
          <min>5</min>
          <max>10</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="50CaliberBase">
    <defName>AF_Ammo_1543x54Caliber</defName>
    <label>15.43x54mm paper cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Medieval/Blunderbuss/Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.4</MarketValue>
    </statBases>
    <ammoClass>LeadBall</ammoClass>
    <cookOffProjectile>AF_Bullet_1543x54Caliber</cookOffProjectile>
  </ThingDef>
  <!-- ================== Projectiles ================== -->
  <ThingDef Class="CombatExtended.AmmoDef" Name="AF_Base1543x54CaliberBullet" ParentName="SK_BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>125</speed>
      <dropsCasings>False</dropsCasings>
    </projectile>
  </ThingDef>
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="AF_Base1543x54CaliberBullet">
    <defName>AF_Bullet_1543x54Caliber</defName>
    <label>15.43x54mm bullet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>28</damageAmountBase>
      <armorPenetrationSharp>6</armorPenetrationSharp>
      <armorPenetrationBlunt>63</armorPenetrationBlunt>
    </projectile>
  </ThingDef>
  <!-- ==================== Recipes ========================== -->
  <!-- BALL FORGE-->
  <RecipeDef ParentName="AmmoRecipeBlackPowderBase">
    <defName>MakeAF_Ammo_1543x54Caliber</defName>
    <label>make 15.43x54mm paper cartridge x25</label>
    <description>Craft 25 15.43x54mm paper cartridges with measured powder charges. These advanced paper cartridges are designed for Dreyse needle rifles and similar breech-loading weapons.</description>
    <jobString>Making 15.43x54mm paper cartridge.</jobString>
    <workAmount>550</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>LeadBar</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
            <li>SerpentinePowder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AF_Resource_PercussionCap</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>HeavyBar</li>
      </categories>
      <thingDefs>
        <li>Powder</li>
        <li>SerpentinePowder</li>
        <li>AF_Resource_PercussionCap</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AF_Ammo_1543x54Caliber>25</AF_Ammo_1543x54Caliber>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <researchPrerequisite>AF_Research_AdvancedFlintlocks</researchPrerequisite>
    <recipeUsers>
      <li>AF_HandloadingAmmoBench</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
